<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Los superheroes más populares para todo el público son:"
        android:textSize="20dp"
        android:id="@+id/txt_mensaje"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/txt_spiderman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spiderman" />

    <TextView
        android:id="@+id/txt_ironman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ironman" />

    <TextView
        android:id="@+id/txt_america"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capitan america" />

    <TextView
        android:id="@+id/txt_marvel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capitana Marvel" />

    <TextView
        android:id="@+id/txt_hulk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hulk" />

    <TextView
        android:id="@+id/txt_viuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La Viuda negra" />

    <TextView
        android:id="@+id/txt_thor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thor" />

    <TextView
        android:id="@+id/txt_strange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor strange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selecciona un reporte por grupo si lo quieres ver"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/opc_grupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:id="@+id/radio_opcGrupo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Todo el público"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <RadioButton
            android:id="@+id/radio_opcGrupo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mujeres adultas"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <RadioButton
            android:id="@+id/radio_opcGrupo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Hombres adultos"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <RadioButton
            android:id="@+id/radio_opcGrupo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mujeres adolescentes"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <RadioButton
            android:id="@+id/radio_opcGrupo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Hombres adolescentes"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <RadioButton
            android:id="@+id/radio_opcGrupo6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Niños"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar"
        android:id="@+id/btn_sel"/>
</LinearLayout>